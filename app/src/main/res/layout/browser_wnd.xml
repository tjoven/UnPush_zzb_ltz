<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
   
        android:background="#c71002"
         android:id="@+id/player_main_daohang"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/browser_backbtn"
            android:layout_width="70dp"
            android:layout_height="27dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12.5dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/back2"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="20dp" />
        
          <TextView
            android:id="@+id/textView1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.64"
            android:background="#00000000"
            android:textColor="@color/white" />
        
         <ImageButton
            android:id="@+id/browser_houtuibtn"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/white"
            android:background="@drawable/goback"
            android:layout_marginRight="20dp"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/browser_qianjinbtn"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/white"
            android:background="@drawable/forward"
            android:layout_marginRight="10dp"
            android:textSize="20dp" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
       android:layout_height="match_parent"
        android:layout_weight="0.03"
         android:id="@+id/player_main_webview"
        android:orientation="horizontal" >

        <WebView
            android:id="@+id/browser_webview"
            android:layout_width="match_parent"
             android:layout_height="match_parent"
            android:layout_weight="0.95"
            android:scrollbars="none" />
    </LinearLayout>
    
 <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/player_main_framelayout"
        android:background="@android:color/background_dark"
        android:visibility="gone">
    </FrameLayout>
</LinearLayout>